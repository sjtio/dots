    transparency = 0

    frame_color = "#ebdbb2"
    separator_color = frame

    font = Iosevka 12
    line_height = 0
    markup = full>
    format = "%s\n%b"
    alignment = centre

    icon_position = left
    max_icon_size = 48

    show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no

    sort = yes
    idle_threshold = 120
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    sticky_history = no
    history_length = 20

    icon_path = /usr/share/icons/Adwaita/16x16/status/:/usr/share/icons/Adwaita/16x16/devices/:/usr/share/icons/Adwaita/16x16/legacy/
    dmenu = /usr/bin/bemenu -p ACTION:
